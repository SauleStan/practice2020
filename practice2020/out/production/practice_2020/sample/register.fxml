<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.registerController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Username:">
               <VBox.margin>
                  <Insets left="30.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTextField">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label layoutX="10.0" layoutY="10.0" text="Password:">
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordTextField">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="5.0" />
               </VBox.margin>
            </PasswordField>
            <Label text="Confirm password:">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="confirmPassTextField" layoutX="40.0" layoutY="97.0">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="5.0" />
               </VBox.margin>
            </PasswordField>
            <Label text="Email:">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="emailTextField">
               <VBox.margin>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="statusLabel" textFill="RED" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onRegisterPressed" text="Register">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
