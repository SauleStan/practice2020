                  <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" layoutX="138.0" layoutY="20.0" mnemonicParsing="false" onAction="#onRegisterPressed" text="Register" />
         </children>
      </HBox>
   </bottom>
