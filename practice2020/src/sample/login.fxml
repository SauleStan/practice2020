               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="passwordTextField">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </PasswordField>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="CENTER" textFill="RED">
