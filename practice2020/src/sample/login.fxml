      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="enterButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onEnterPressed" text="Enter">
